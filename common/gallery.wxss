.gallery {
    display: flex;
    flex-wrap: wrap;
    position: relative;
    margin: 0 -14px -14px 0;
}

.gallery .mod-upload-field {
  float: left;
  width: calc(50% - 14px);
  height: auto;
  margin: 0 14px 14px 0;
  padding-top: calc(50% - 14px);
  box-sizing: border-box;
}

.gallery-item {
    float: left;
    width: calc(50% - 14px);
    padding-top: calc(50% - 14px);
    margin: 0 14px 14px 0;
    position: relative;
    border: 1rpx solid transparent;
    box-sizing: border-box;
}

.gallery-item-cover {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
}

.gallery-item-del {
  position: absolute;
  top: -8rpx;
  right: -8rpx;
  width: 36rpx;
  height: 36rpx;
  line-height: 36rpx;
  text-align: center;
  background: #ff3333;
  border-radius: 50%;
}