    <van-button custom-class="btn-brown plr-20 br-0" size="large">报备</van-button>
    <view class="mod-chat-action__field">
      <input class="mcaf-input" placeholder="点击输入内容..."></input>
    </view>
    <van-button type="primary" round custom-class="btn-primary mr-25" size="small">发送</van-button>
