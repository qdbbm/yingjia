<!--index.wxml-->
<view class="page page--has-footer">
  <swiper class="banner" indicator-dots="{{indicatorDots}}"
    autoplay="{{autoplay}}" current="{{currentSwiper}}" interval="{{interval}}" duration="{{duration}}" indicator-color="rgba(255,255,255,.4)" indicator-active-color="#fff" bindchange="swiperChange">
    <block wx:for="{{bannerList}}">
      <swiper-item>
        <image src="{{item.imageUrl}}" class="banner-item"/>
      </swiper-item>
    </block>
  </swiper>
</view>